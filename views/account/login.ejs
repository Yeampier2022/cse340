<% if (title) { %>
<div class="ctn-form">
  <form  id="loginForm" class="form-login" action="/account/login" method="post">
    <h1 class="title-login"><%= title %></h1>
    <label for="account_email">Email:</label>
    <input
    id="account_email"
      class="ipt-email"
      name="account_email"
      size="40"
      placeholder="Email"
      type="email"
      value="<% locals.account_email %>"
      required
    />
    <label for="account_password">Password:</label>
    <span
      >Passwords must be at least 12 characters and contain at least 1 number, 1
      capital letter and 1 special character</span
    >
    <input
    id="account_password"
      class="ipt-password"
      name="account_password"
      size="40"
      placeholder="Password"
      type="password"
      required
    />
    <div class="btn-ctn">
    <button class="btn-login" type="submit">Login</button>
    </div>
    <h4 class="title-login">No account ? <a class="sign-up" href="/account/register">Sign-up</a></h4>
  </form>
</div>

<% } else { res.redirect('/') } %> <%- messages() %>
