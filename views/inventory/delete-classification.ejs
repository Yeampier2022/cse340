<% if (title) { %>
    <h1 class="title-login"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
  
    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
  
    <div class="ctn-classification">
<form class="form-classification" action="delete-classification" method="post">
  <span>To remove the classification, the classification must not have any added vehicle</span>
    <label>
        <span>Classification</span><span class="required">*</span>
        <% if(classificationSelect) { %> <%- classificationSelect %> <% } %>
      </label>
<button  class="btn-login" type="submit">Delete</button>
</form>
</div>