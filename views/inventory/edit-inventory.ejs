<% if (title) { %> <% } else { res.redirect('/') } %> <%- messages() %>

<div class="red">
  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>

  <% } %>
</div>

<div class="ctn-form">
  <form action="/inv/update" method="post" class="form-login">
    <h1 class="title-login"><%= title %></h1>
    <label>
      <span>Classification</span><span class="required">*</span>
      <% if(classificationSelect) { %> <%- classificationSelect %> <% } %>
    </label>

    <label for="inv_make">Make:</label>
    <input
      id="inv_make"
      class="ipt-password"
      required
      name="inv_make"
      size="40"
      placeholder="Make"
      type="text"
      value="<%= locals.inv_make %>"
    />

    <label for="inv_model">Model:</label>
    <input
      id="inv_model"
      class="ipt-password"
      required
      name="inv_model"
      size="40"
      placeholder="Model"
      type="text"
      value="<%=  locals.inv_model  %>"
    />

    <label for="inv_description">Description:</label>
    <input
      id="inv_description"
      class="ipt-password"
      required
      name="inv_description"
      size="40"
      placeholder="Description"
      type="text"
      value="<%= locals.inv_description  %>"
    />
    <label for="inv_image">Image Path:</label>
    <input
      id="inv_image"
      class="ipt-password"
      required
      name="inv_image"
      size="40"
      placeholder="Image Path"
      type="text"
      value="<%= locals.inv_image  %>"
    />
    <label for="inv_thumbnail">inv thumbnall:</label>
    <input
      id="inv_thumbnail"
      class="ipt-password"
      required
      name="inv_thumbnail"
      size="40"
      placeholder="Image Path"
      type="text"
      value="<%= locals.inv_thumbnail  %>"
    />

    <label for="inv_price">Price:</label>
    <input
      id="inv_price"
      class="ipt-password"
      required
      name="inv_price"
      placeholder="Price"
      type="number"
      value="<%= locals.inv_price  %>"
    />
    <label for="inv_year">Year:</label>
    <input
      id="inv_year"
      class="ipt-password"
      required
      name="inv_year"
      placeholder="Year"
      type="number"
      value="<%= locals.inv_year  %>"
    />
    <label for="inv_miles">Miles:</label>
    <input
      id="inv_miles"
      class="ipt-password"
      required
      name="inv_miles"
      placeholder="Miles"
      type="number"
      value="<%= locals.inv_miles  %>"
    />
    <label for="inv_color">Color:</label>
    <input
      id="inv_color"
      class="ipt-password"
      required
      name="inv_color"
      size="20"
      placeholder="Color"
      type="text"
      value="<%= locals.inv_color  %>"
    />
    <div class="form-footer">
      <input type="number" name="inv_id" <% if(locals.inv_id) { % /> value="<%=
      locals.inv_id %>" <% } %>>
    </div>
    <div cclass="btn-ctn">
      <button class="btn-login" id="submitButton" type="submit" name="submit">
        Upgrade
      </button>
    </div>
  </form>
</div>
